# =================================
# FINASTER MLM PLATFORM
# Environment Configuration Example
# =================================
#
# Copy this file to .env for development
# For production, copy .env.production.template to .env.production
#
# IMPORTANT: Never commit actual .env files with real credentials!
#
# =================================

# ============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================================================

# Supabase Project URL
# Get from: Supabase Dashboard → Settings → API → Project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (Public - safe to expose)
# Get from: Supabase Dashboard → Settings → API → anon/public
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_anon_key_here

# Supabase Service Role Key (PRIVATE - keep secret!)
# Get from: Supabase Dashboard → Settings → API → service_role
# Used for server-side operations and migrations
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_service_role_key_here

# Direct Database Connection URL
# Get from: Supabase Dashboard → Settings → Database → Connection String → URI
# Format: postgresql://postgres.[ref]:[password]@host:6543/postgres
# Note: URL encode special characters in password (@ = %40, # = %23)
DATABASE_URL=postgresql://postgres.your-project:your-password@aws-0-region.pooler.supabase.com:6543/postgres

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Node Environment
# Options: development | production | test
NODE_ENV=development

# Application Port
PORT=5173

# Application URLs
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:5173/api

# ============================================================================
# SECURITY & AUTHENTICATION (Optional for dev, Required for production)
# ============================================================================

# JWT Secrets - Generate with:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRES_IN=7d

REFRESH_TOKEN_SECRET=dev_refresh_secret_change_in_production
REFRESH_TOKEN_EXPIRES_IN=30d

SESSION_SECRET=dev_session_secret_change_in_production

# ============================================================================
# OPTIONAL INTEGRATIONS
# ============================================================================

# Orderly Network (DEX Trading Features)
VITE_ORDERLY_BROKER_ID=demo
VITE_ORDERLY_BROKER_NAME=finaster

# WalletConnect
VITE_WALLETCONNECT_PROJECT_ID=

# Privy (Social Login)
VITE_PRIVY_APP_ID=
VITE_PRIVY_LOGIN_METHODS=email,google

# SendGrid (Email)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Analytics
VITE_GA_MEASUREMENT_ID=
VITE_SENTRY_DSN=

# Payments
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
