# ===========================================
# ASTERDEX DEX - Environment Configuration
# ===========================================

# -----------------
# Supabase Configuration
# -----------------
# Get these from your Supabase project dashboard:
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# For local development with Docker:
# VITE_SUPABASE_URL=http://localhost:54321
# VITE_SUPABASE_ANON_KEY=your_local_anon_key

# -----------------
# Orderly Network (Existing Configuration)
# -----------------
VITE_ORDERLY_BROKER_ID=demo
VITE_ORDERLY_BROKER_NAME=finaster
VITE_DEFAULT_CHAIN=56

# -----------------
# Privy Authentication (Existing Configuration)
# -----------------
VITE_PRIVY_APP_ID=cmgphkkfn002ijj0ccys0n88z

# -----------------
# Feature Flags (Existing Configuration)
# -----------------
VITE_ENABLED_MENUS=Trading,Swap,Markets,Portfolio,Leaderboard,Rewards,Vaults

# -----------------
# JWT Configuration
# -----------------
# Generate a random secret for JWT signing
# You can use: openssl rand -base64 32
VITE_JWT_SECRET=your_jwt_secret_key_here
VITE_JWT_EXPIRY=7d

# -----------------
# Referral System Configuration
# -----------------
# Commission rate for referrals (0.1 = 10%)
VITE_REFERRAL_COMMISSION_RATE=0.1

# Length of generated referral codes
VITE_REFERRAL_CODE_LENGTH=8

# -----------------
# Admin Configuration
# -----------------
# Default admin email (for setup)
VITE_ADMIN_EMAIL=admin@asterdex.com

# -----------------
# Application Configuration
# -----------------
# Base URL for the application
VITE_APP_URL=http://localhost:5173

# API timeout (milliseconds)
VITE_API_TIMEOUT=30000

# -----------------
# Feature Toggles
# -----------------
# Enable/disable features
VITE_ENABLE_REFERRAL_SYSTEM=true
VITE_ENABLE_ADMIN_DASHBOARD=true
VITE_ENABLE_EMAIL_VERIFICATION=true

# -----------------
# Development Options
# -----------------
# Enable debug mode
VITE_DEBUG_MODE=false

# Enable API logging
VITE_ENABLE_API_LOGGING=false
